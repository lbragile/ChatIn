<%- include('_header') -%>

    <div class="container h-100" id="chat-container">
      <button
        type="button"
        class="btn btn-secondary my-2 d-flex justify-content-center"
        id="chat"
      >
        Chat
      </button>
      <span class="d-flex justify-content-center" id="title-info"></span>
      <div class="h-50 overflow-auto">
        <div id="chat-area"></div>
      </div>
      <span class="d-flex justify-content-center" id="typing"></span>

      <div class="input-group d-flex justify-content-center" id="input-area">
        <input type="text" class="px-2" placeholder="Enter Message" id="message" />
        <button type="submit" class="btn btn-primary ml-2" id="send">
          Send
        </button>
      </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script type="module" src="./client.js"></script>
  </body>
</html>
